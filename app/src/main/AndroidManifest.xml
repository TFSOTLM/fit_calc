<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.studyjamscn.s1.sj32.lizhijun">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BMIActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/BMI"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".HeatActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/heat_consumption"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".HeartRateActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/heart_rate"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".WeightLossActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/weight_loss_time"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
    </application>

</manifest>